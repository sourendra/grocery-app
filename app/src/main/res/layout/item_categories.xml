<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_96dp"
        android:layout_marginBottom="@dimen/common_4dp"
        app:cardElevation="@dimen/common_4dp"
        android:layout_marginTop="@dimen/common_4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_16dp"
                android:src="@drawable/ic_right_arrow"/>

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/common_16dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_18sp"
                tools:text="Fruits and vegetables"
                android:layout_toStartOf="@id/civ_category_pic" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_category_pic"
                android:layout_width="@dimen/common_72dp"
                android:layout_height="@dimen/common_72dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_16dp"
                android:layout_toStartOf="@id/iv_right_arrow"
                android:src="@drawable/vegitables" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>